	"description": "Build Stone Packages for Moss",
	"license": "Zlib",
	"version": "1.0.1",
	"name": "boulder",
	"targetPath": "bin",
	"toolchainRequirements": {
		"ldc": ">=1.31.0"
	},
	"dependencies": {
		"libmoss": {
			"path": "../libmoss"
		}
	},
	"excludedSourceFiles": [
		"source/container/*"
	],
	"subPackages": [
		{
			"name": "container",
			"targetType": "executable",
			"dependencies": {
				"libmoss": {
					"path": "../libmoss"
				},
				"dopt": {
					"repository": "git+https://github.com/tarkah/dopt.git",
					"version": "387ce049bae7cb5adbac5ec075eff6b349d02675"
				}
			},
			"libs": [
				"subid"
			],
			"sourcePaths": [
				"source/container"
			],
			"importPaths": [
				"source"
			],
			"targetPath": "libexec/boulder"
		}
	],
	"stringImportPaths": [
		"data"
	],
	"preBuildCommands": [
		"cp data/environment.in data/environment",
		"sed -i 's/@VERSION@/'$DUB_PACKAGE_VERSION'/g' data/environment",
		"sed -i 's/@GIT_HASH@/'`git describe --always --dirty --exclude='*' 2>/dev/null || echo ''`'/g' data/environment"
	],
	"postBuildCommands": [
		"rm data/environment 2>/dev/null || true"
	]
}
